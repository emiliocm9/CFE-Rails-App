<div class="HomeIndex"> 
  <nav class="navbar navbar-light bg-light">
    <form class="container-fluid justify-content-end">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Registrar nuevo usuario", new_registration_path(resource_name), class:"btn btn-outline-primary me-2" %>
      <% end %>
    </form>
  </nav>
  <div class="users-list-box mt-5">
    <div>
      <h2 class="table-title">Usuarios registrados</h2>
    </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Usuario</th>
            <th scope="col">Correo electrónico</th>
            <th scope="col">Teléfono</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <%@users.each do |user|%>
            <tr>
              <th class="list-group-item"><%= user.id%></th>
              <td><%= user.name%></td>
              <td><%= user.username%></td>
              <td><%= user.email%></td>
              <td><%= user.phone%></td>
              <td><%= user.status%><%= link_to "editar", edit_user_registration_path(user) %></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>
