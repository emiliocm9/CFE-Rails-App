<div class="SignupForm">
  <div class="big-box">
    <div class="form-image">
      <h2 class="text-center text-light">Editar status</h2>
      <p class="text-light">Cambia el status del usuario</p>
    </div>
    <div class="form-box">
      <%= form_with(model: user, local: true) do |f| %>
      <%= render "error_messages", resource: @user %>
        <div class="row">
          <div class="col mb-3">
            <%= f.label :status %>
            <%= f.select :status, options_for_select(['Ingresado', 'En proceso', 'En espera', 'Solventar', 'Requerimiento', 'Autorizado', 'Rechazado']),{ :prompt => user.status}, { :class => "form-select" } %>
          </div>
        </div>

        <div class="actions mt-2">
          <%= f.submit "Aceptar", class:"btn btn-info button text-light text-uppercase"%>
        </div>
      <% end %>
      <div class="w-100 d-flex justify-content-center mt-3">
        <%= link_to "Cancelar", root_path, class:"btn text-danger" %>
      </div>
    </div>
  </div>
</div>
